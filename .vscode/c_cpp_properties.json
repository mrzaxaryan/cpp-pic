{
    "version": 4,
    "enableConfigurationSquiggles": true,
    "env": {
        "windowsIncludePath": [
            "${workspaceFolder}",
            "${workspaceFolder}/include",
            "${workspaceFolder}/include/bal",
            "${workspaceFolder}/include/bal/primitives",
            "${workspaceFolder}/include/pal",
            "${workspaceFolder}/include/pal/windows",
            "${workspaceFolder}/include/ral",
            "${workspaceFolder}/include/ral/crypt",
            "${workspaceFolder}/include/ral/network",
            "${workspaceFolder}/include/ral/network/tls",
            "${workspaceFolder}/tests"
        ],
        "windowsSourcePath": [
            "${workspaceFolder}/src",
            "${workspaceFolder}/src/bal",
            "${workspaceFolder}/src/pal",
            "${workspaceFolder}/src/pal/windows",
            "${workspaceFolder}/src/ral",
            "${workspaceFolder}/src/ral/crypt",
            "${workspaceFolder}/src/ral/crypt/random",
            "${workspaceFolder}/src/ral/crypt/random/windows",
            "${workspaceFolder}/src/ral/network",
            "${workspaceFolder}/src/ral/network/tls"
        ]
    },
    "configurations": [
        {
            "name": "i386-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-x86",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "ARCHITECTURE_I386",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_I386"
            ],
            "includePath": [
                "${windowsIncludePath}",
                "${windowsSourcePath}"
            ],
            "browse": {
                "path": [
                    "${windowsIncludePath}",
                    "${windowsSourcePath}"
                ]
            }
        },
        {
            "name": "x86_64-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-x64",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "ARCHITECTURE_X86_64",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_X86_64"
            ],
            "includePath": [
                "${windowsIncludePath}",
                "${windowsSourcePath}"
            ],
            "browse": {
                "path": [
                    "${windowsIncludePath}",
                    "${windowsSourcePath}"
                ]
            }
        },
        {
            "name": "arm7a-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-arm",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "ARCHITECTURE_ARMV7A",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_ARMV7A"
            ],
            "includePath": [
                "${windowsIncludePath}",
                "${windowsSourcePath}"
            ],
            "browse": {
                "path": [
                    "${windowsIncludePath}",
                    "${windowsSourcePath}"
                ]
            }
        },
        {
            "name": "aarch64-pc-windows-gnu",
            "compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
            "intelliSenseMode": "windows-clang-arm64",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "defines": [
                "ARCHITECTURE_AARCH64",
                "PLATFORM_WINDOWS",
                "PLATFORM_WINDOWS_AARCH64"
            ],
            "includePath": [
                "${windowsIncludePath}",
                "${windowsSourcePath}"
            ],
            "browse": {
                "path": [
                    "${windowsIncludePath}",
                    "${windowsSourcePath}"
                ]
            }
        }
    ]
}