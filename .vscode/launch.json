{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "i386-pc-windows-gnu (PIC)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Windows/SysWOW64/WindowsPowerShell/v1.0/powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/loader.ps1",
                "${workspaceFolder}/build/windows/i386/release/output.bin"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "i386-pc-windows-gnu-release"
        },
        {
            "name": "x86_64-pc-windows-gnu (PIC)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd.exe",
            "args": [
                "/Q",
                "/C",
                "start",
                "/B",
                "/MACHINE",
                "amd64",
                "/WAIT",
                "powershell.exe",
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/loader.ps1",
                "${workspaceFolder}/build/windows/x86_64/release/output.bin"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "x86_64-pc-windows-gnu-release"
        },
        {
            "name": "aarch64-pc-windows-gnu (PIC)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd.exe",
            "args": [
                "/Q",
                "/C",
                "start",
                "/B",
                "/MACHINE",
                "arm64",
                "/WAIT",
                "powershell.exe",
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/loader.ps1",
                "${workspaceFolder}/build/windows/aarch64/release/output.bin"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "aarch64-pc-windows-gnu-release"
        },
        {
            "name": "i386-pc-windows-gnu-debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/windows/i386/debug/output.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "i386-pc-windows-gnu-debug"
        },
        {
            "name": "x86_64-pc-windows-gnu-debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/windows/x86_64/debug/output.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "x86_64-pc-windows-gnu-debug"
        },
        {
            "name": "armv7a-pc-windows-gnu-debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/windows/armv7a/debug/output.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "armv7a-pc-windows-gnu-debug"
        },
        {
            "name": "aarch64-pc-windows-gnu-debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/windows/aarch64/debug/output.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "aarch64-pc-windows-gnu-debug"
        }
    ]
}
