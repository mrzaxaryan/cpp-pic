{
  "version": "2.0.0",
  "options": {
    "cwd": "${workspaceFolder}"
  },
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      }
    }
  },
  "linux": {
    "options": {
      "shell": {
        "executable": "bash",
        "args": [
          "-c"
        ]
      }
    }
  },
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": false,
    "clear": true
  },
  "tasks": [
    {
      "label": "i386-windows-debug",
      "type": "shell",
      "command": "cmake -B build/debug/windows/i386/cmake -DARCHITECTURE=i386 -DPLATFORM=windows -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/windows/i386/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "i386-windows-release",
      "type": "shell",
      "command": "cmake -B build/release/windows/i386/cmake -DARCHITECTURE=i386 -DPLATFORM=windows -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/windows/i386/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "x86_64-windows-debug",
      "type": "shell",
      "command": "cmake -B build/debug/windows/x86_64/cmake -DARCHITECTURE=x86_64 -DPLATFORM=windows -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/windows/x86_64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "x86_64-windows-release",
      "type": "shell",
      "command": "cmake -B build/release/windows/x86_64/cmake -DARCHITECTURE=x86_64 -DPLATFORM=windows -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/windows/x86_64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "aarch64-windows-debug",
      "type": "shell",
      "command": "cmake -B build/debug/windows/aarch64/cmake -DARCHITECTURE=aarch64 -DPLATFORM=windows -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/windows/aarch64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "aarch64-windows-release",
      "type": "shell",
      "command": "cmake -B build/release/windows/aarch64/cmake -DARCHITECTURE=aarch64 -DPLATFORM=windows -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/windows/aarch64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "i386-linux-debug",
      "type": "shell",
      "command": "cmake -B build/debug/linux/i386/cmake -DARCHITECTURE=i386 -DPLATFORM=linux -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/linux/i386/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "i386-linux-release",
      "type": "shell",
      "command": "cmake -B build/release/linux/i386/cmake -DARCHITECTURE=i386 -DPLATFORM=linux -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/linux/i386/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "x86_64-linux-debug",
      "type": "shell",
      "command": "cmake -B build/debug/linux/x86_64/cmake -DARCHITECTURE=x86_64 -DPLATFORM=linux -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/linux/x86_64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "x86_64-linux-release",
      "type": "shell",
      "command": "cmake -B build/release/linux/x86_64/cmake -DARCHITECTURE=x86_64 -DPLATFORM=linux -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/linux/x86_64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "armv7a-linux-debug",
      "type": "shell",
      "command": "cmake -B build/debug/linux/armv7a/cmake -DARCHITECTURE=armv7a -DPLATFORM=linux -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/linux/armv7a/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "armv7a-linux-release",
      "type": "shell",
      "command": "cmake -B build/release/linux/armv7a/cmake -DARCHITECTURE=armv7a -DPLATFORM=linux -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/linux/armv7a/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "aarch64-linux-debug",
      "type": "shell",
      "command": "cmake -B build/debug/linux/aarch64/cmake -DARCHITECTURE=aarch64 -DPLATFORM=linux -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/linux/aarch64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "aarch64-linux-release",
      "type": "shell",
      "command": "cmake -B build/release/linux/aarch64/cmake -DARCHITECTURE=aarch64 -DPLATFORM=linux -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/linux/aarch64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "x86_64-uefi-debug",
      "type": "shell",
      "command": "cmake -B build/debug/uefi/x86_64/cmake -DARCHITECTURE=x86_64 -DPLATFORM=uefi -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/uefi/x86_64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "x86_64-uefi-release",
      "type": "shell",
      "command": "cmake -B build/release/uefi/x86_64/cmake -DARCHITECTURE=x86_64 -DPLATFORM=uefi -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/uefi/x86_64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "aarch64-uefi-debug",
      "type": "shell",
      "command": "cmake -B build/debug/uefi/aarch64/cmake -DARCHITECTURE=aarch64 -DPLATFORM=uefi -DBUILD_TYPE=debug -DOPTIMIZATION_LEVEL=Og -G Ninja && cmake --build build/debug/uefi/aarch64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "aarch64-uefi-release",
      "type": "shell",
      "command": "cmake -B build/release/uefi/aarch64/cmake -DARCHITECTURE=aarch64 -DPLATFORM=uefi -DBUILD_TYPE=release -DOPTIMIZATION_LEVEL=O3 -G Ninja && cmake --build build/release/uefi/aarch64/cmake",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "Build All Windows",
      "dependsOrder": "parallel",
      "dependsOn": [
        "i386-windows-release",
        "x86_64-windows-release",
        "aarch64-windows-release"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build All Linux",
      "dependsOrder": "parallel",
      "dependsOn": [
        "i386-linux-release",
        "x86_64-linux-release",
        "armv7a-linux-release",
        "aarch64-linux-release"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build All UEFI",
      "dependsOrder": "parallel",
      "dependsOn": [
        "x86_64-uefi-release",
        "aarch64-uefi-release"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run UEFI x86_64 (QEMU)",
      "type": "shell",
      "command": "qemu-system-x86_64 -bios /usr/share/ovmf/OVMF.fd -drive file=fat:rw:build/release/uefi/x86_64,if=ide,index=0 -m 512 -nographic -nic user,model=e1000 -device isa-debug-exit,iobase=0xf4,iosize=0x04 -no-reboot; ret=$?; if [ $ret -eq 1 ]; then exit 0; else exit $ret; fi",
      "dependsOn": "x86_64-uefi-release",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Run UEFI aarch64 (QEMU)",
      "type": "shell",
      "command": "qemu-system-aarch64 -M virt -cpu cortex-a72 -bios /usr/share/qemu-efi-aarch64/QEMU_EFI.fd -drive file=fat:rw:build/release/uefi/aarch64,if=virtio -m 512 -nographic -nic user,model=virtio -semihosting -no-reboot; ret=$?; if [ $ret -eq 0 ]; then exit 0; else exit $ret; fi",
      "dependsOn": "aarch64-uefi-release",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Build All",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Build All Windows",
        "Build All Linux",
        "Build All UEFI"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}